@using MyBlogNight.EntityLayer.Concrete
@model List<SocialMedia>
@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Sosyal Medya Paneli</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SocialMediaID</td>
                                <td>@item.Title</td>
                                <td><a href="/Admin/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger"> Sil</a></td>
                                <td><a href="/Admin/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-warning"> Güncelle</a></td>

                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/Admin/SocialMedia/AddSocialMedia/" class="btn btn-outline-success"> Yeni Sosyal Medya Ekle</a>

            </div>
        </div>
    </div>
</div>
