@using MyBlogNight.EntityLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Kategori Paneli</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori Ad</th>
                            <th>Kategori Sil</th>
                            <th>Kategori Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryID</td>
                                <td>@item.CategoryName</td>
                                <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger"> Sil</a></td>
                                <td><a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-warning"> Güncelle</a></td>

                            </tr>
                        }
                        
                      
                    </tbody>
                </table>
                <a href="/Admin/Category/AddCategory/" class="btn btn-outline-success"> Yeni Kategori Girişi</a>

            </div>
        </div>
    </div>
</div>

