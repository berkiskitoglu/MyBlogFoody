@model Article
@{
    ViewData["Title"] = "UpdateArticle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12">

    <form method="post">
        <input type="hidden" asp-for="ArticleID" />
        <label>Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
        <label>Oluşturulma Tarihi</label>
        <input type="text" asp-for="CreatedDate" class="form-control" />
        <br />
        <label>Resim </label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
     
        <label>Kategori</label>
        <input type="text" asp-for="Category.CategoryName" class="form-control" />
        <br />
        <label>Durum</label>
        <input type="text" asp-for="Status" class="form-control" />
        <br />
        <label>Detay</label>

        <input type="text" asp-for="Detail" class="form-control" />
        <br />
        <button class="btn btn-primary">İçerik Güncelle</button>
    </form>

</div>


