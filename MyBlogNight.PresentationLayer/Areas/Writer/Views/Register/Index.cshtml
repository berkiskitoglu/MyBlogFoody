
@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Focus - Bootstrap Admin Dashboard </title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/focus-2/images/favicon.png">
    <link href="~/focus-2/css/style.css" rel="stylesheet">

</head>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container-fluid h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <h4 class="text-center mb-4">Hesabınızı Oluşturun</h4>

                                    <form method="post">

                                        <div class="form-group">
                                            <label><strong>Ad</strong></label>
                                            <input type="text" class="form-control" placeholder="Adınız" asp-for="Name">
                                        </div>

                                        <div class="form-group">
                                            <label><strong>Soyad</strong></label>
                                            <input type="text" class="form-control" placeholder="Soyadınız" asp-for="Surname">
                                        </div>

                                        <div class="form-group">
                                            <label><strong>Email</strong></label>
                                            <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Email">
                                        </div>

                                        <div class="form-group">
                                            <label><strong>Kullanıcı Ad</strong></label>
                                            <input type="text" class="form-control" placeholder="Kullanıcı Adınız" asp-for="Username">
                                        </div>

                                        <div class="form-group">
                                            <label><strong>Şifre</strong></label>
                                            <input type="password" class="form-control" placeholder="Şifreniz" asp-for="Password" required>
                                        </div>

                                        <div class="text-center mt-4">
                                            <button class="btn btn-primary btn-block">Kullanıcı Kaydet</button>
                                        </div>
                                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    </form>
                                    <div class="new-account mt-3">
                                        <p>Zaten Bir Hesabın Var Mı? <a class="text-primary" href="/Writer/Login/Index/">Giriş Yap</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/focus-2/vendor/global/global.min.js"></script>
    <script src="~/focus-2/js/quixnav-init.js"></script>

</body>

</html>