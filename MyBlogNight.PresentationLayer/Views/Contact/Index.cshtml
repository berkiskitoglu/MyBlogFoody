@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="contact spad">
    <div class="container">
        <div class="contact__text">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h2>İletişim</h2>
                        <div class="breadcrumb__option">
                            <a href="#">Anasayfa</a>
                            <span>İletişim</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="contact__map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24077.048597977115!2d29.080760369461988!3d41.033326616167244!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac8f76d1706ed%3A0xd630fb5e3d1e2cf8!2zw5xtcmFuaXllLCBFbG1hbMSxa2VudCwgMzQ3NjQgw5xtcmFuaXllL8Swc3RhbmJ1bA!5e0!3m2!1str!2str!4v1735039848682!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                    <br />
                    <div class="contact__widget">
                        <ul>
                            <li>
                                <i class="fa fa-map-marker"></i>
                                <span>İstanbul/Türkiye</span>
                            </li>
                            <li>
                                <i class="fa fa-mobile"></i>
                                <span>Telefon: 258-556-189</span>
                            </li>
                            <li>
                                <i class="fa fa-envelope-o"></i>
                                <span>Email: iskitoglu.berk@gmail.com</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="contact__form">
                        <div class="contact__form__title">
                            <h2>İLETİŞİME GEÇ</h2>
                            <p>
                                İletişim, her başarılı ilişkinin temelidir. Bizimle iletişime geçerek, görüşlerinizi, sorularınızı veya önerilerinizi bizimle paylaşabilirsiniz. Müşteri memnuniyetine verdiğimiz önemle, her türlü geri bildiriminiz bizim için çok değerli. Size en kısa sürede yardımcı olmak için buradayız.
                            </p>
                        </div>
                        <form  method="post">
                            <input type="text" placeholder="Ad" asp-for="NameSurname">
                            <input type="text" placeholder="Mail" asp-for="Mail">
                            <input type="text" placeholder="Konu" asp-for="Subject">
                            <textarea placeholder="Mesaj" asp-for="Message"></textarea>
                            <button type="submit" class="site-btn">Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

