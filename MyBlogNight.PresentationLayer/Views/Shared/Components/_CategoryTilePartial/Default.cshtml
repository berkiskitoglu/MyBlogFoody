@model List<Article>
<div class="container">
    <div class="row">
        @foreach (var item in Model.Where(x => x.Category != null && x.Category.CategoryID == 2).Take(4))
        {
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="categories__item set-bg" data-setbg=" @item.ImageUrl ">
                    <div class="categories__hover__text">
                        <h5>  Kategori / @item.Category.CategoryName</h5>
                     
                    </div>
                </div>
            </div>
        }


    </div>
</div>